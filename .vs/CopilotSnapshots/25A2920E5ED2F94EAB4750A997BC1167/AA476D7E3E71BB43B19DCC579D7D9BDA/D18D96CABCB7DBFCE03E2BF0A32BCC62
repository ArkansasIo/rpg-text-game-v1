using System;
using System.IO;
using Microsoft.Extensions.Configuration;
using Microsoft.EntityFrameworkCore;
using RPGMenuSystem.Database;
using RPGMenuSystem.Game;
using RPGMenuSystem.UI;

namespace RPGMenuSystem
{
    class Program
    {
        static async System.Threading.Tasks.Task Main(string[] args)
        {
            // Load configuration
            var configuration = new ConfigurationBuilder()
                .SetBasePath(Directory.GetCurrentDirectory())
                .AddJsonFile("appsettings.json", optional: true, reloadOnChange: true)
                .Build();

            // Setup database context
            RpgDbContext dbContext = null;
            DatabaseManager databaseManager = null;
            bool useDatabaseMode = false;

            try
            {
                var connectionString = configuration.GetConnectionString("DefaultConnection");
                
                var optionsBuilder = new DbContextOptionsBuilder<RpgDbContext>();
                optionsBuilder.UseSqlServer(connectionString);
                
                dbContext = new RpgDbContext(optionsBuilder.Options);
                databaseManager = new DatabaseManager(dbContext);

                // Test database connection
                if (await databaseManager.TestConnectionAsync())
                {
                    Console.WriteLine("✓ Database connection successful!");
                    useDatabaseMode = true;
                }
                else
                {
                    Console.WriteLine("⚠ Database connection failed. Using file-based saves.");
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine($"⚠ Database initialization failed: {ex.Message}");
                Console.WriteLine("Using file-based saves instead.");
            }

            Console.WriteLine();
            Console.WriteLine("==============================================");
            Console.WriteLine($"Save Mode: {(useDatabaseMode ? "DATABASE" : "FILE-BASED")}");
            Console.WriteLine("==============================================");
            Console.WriteLine();

            // Show splash screen
            SplashScreen.Show();

            // Show title screen
            TitleScreen.Show();

            // Start the game
            var game = new RPGGame();
            if (useDatabaseMode && databaseManager != null)
            {
                game.SetDatabaseManager(databaseManager);
            }
            game.Start();

            // Cleanup
            dbContext?.Dispose();
        }
    }
}
